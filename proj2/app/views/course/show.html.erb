<!DOCTYPE html>
<html>
<head>
  <title>Course</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="css/hover.css" rel="stylesheet" media="all">
  <link href='https://fonts.googleapis.com/css?family=Lato:400,300,700,900' rel='stylesheet' type='text/css'>
</head>
<body>
	<div class="page-header" style="padding-top: 0; margin-top:0">
	<div class="jumbotron" style="font-size:40px; ">
		<h1 style="font-size:40px"><%= @course.name %> <small><%= @course.description %></small></h1>
		<h2 style="line-height:10px">Posts</h2>
	</div>
		<div class="list-group">
			<% @posts.each do |p| %>
	  			<a href="/post/<%= p.id %>" class="list-group-item">
	  				<h4 class="list-group-item-heading"><span class="glyphicon glyphicon-user"></span> <strong><%= p.user.name %></strong></h4>
	    			<h4 class="list-group-item-heading"><%= p.title %></h4>
	    			<p class="list-group-item-text"><%= p.content %></p>
	  			</a>
  			<% end %>
		</div>

		<div class="well" style="background-color:white">
			<% if current_user.present? %>
				<%= button_to "New Post", new_post_path(@course), class: "btn btn-default" %>
			<% end %>
		</div>
	</div>
</body>
</html>

