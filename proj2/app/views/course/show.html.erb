<!DOCTYPE html>
<html>
<head>
  <title>Course</title>
</head>
<body>
	<div class="page-header">
	<h1><%= @course.name %> <small><%= @course.description %></small></h1>
	
		<div class="list-group">
			<% @posts.each do |p| %>
	  			<a href="/post/<%= p.id %>" class="list-group-item">
	  				<h4 class="list-group-item-heading"><%= p.user.name %></h4>
	    			<h4 class="list-group-item-heading"><%= p.title %></h4>
	    			<p class="list-group-item-text"><%= p.content %></p>
	  			</a>
  			<% end %>
		</div>
	
	<% if current_user.present? %>
		<%= button_to "New Post", new_post_path(@course) %>
	<% end %>
	</div>
</body>
</html>

