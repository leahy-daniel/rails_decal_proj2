	margin-left:1%;
	margin-right:1%;
	color:white;
	padding: 0;
	margin-top:8%;
	height: 250px;
	width: 30%;
}

.cal{
	width: 300px;
	height: 200px;
	box-shadow:inset 1px 1px 40px 0 rgba(0,0,0,.45);
    margin:5% auto 0 auto; 
    background: image-url('Cal.png') no-repeat;
    background-size: 300px 200px;
	border-radius:5px;
	overflow:hidden;
}

#cal-overlay{  
		    background:rgba(0,0,0,.75);
            text-align:center;
            padding:45px 0 66px 0;
            opacity:0;
            -webkit-transition: opacity .25s ease;
		    -moz-transition: opacity .25s ease;
}

.cal:hover #cal-overlay {
               	    opacity:1;
}

.cal-logo	{  
			font-family:Helvetica;
            font-weight:900;
            color:rgba(255,255,255,.85);
            font-size:96px;
}




